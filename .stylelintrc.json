{
  "extends": [
    "stylelint-config-standard",
    "stylelint-order-config-standard",
    "stylelint-config-prettier"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "indentation": "tab",
    "color-hex-case": "lower",
    "color-hex-length": "long",
    "color-named": "never"
  }
}
