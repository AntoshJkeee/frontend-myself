{
  "extends": "stylelint-config-recommended",
  "plugins": [
    "stylelint-scss",
    "stylelint-order",
    "stylelint-declaration-block-no-ignored-properties"
  ],
  "rules": {
    "indentation": "tab",
    "color-hex-case": "lower",
    "color-hex-length": "long",
    "color-named": "never"
  }
}